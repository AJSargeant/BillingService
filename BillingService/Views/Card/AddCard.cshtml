@model BillingModel.Card

@using (Html.BeginForm("AddCardPost", "Card", FormMethod.Post))
{
    <h4>New Card</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="AddCard">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                </div>
                <div class="form-group">
                    <label asp-for="CardNumber" class="control-label"></label>
                    <input asp-for="CardNumber" class="form-control" />
                    <span asp-validation-for="CardNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ExpirationDate" class="control-label"></label>
                    <input asp-for="ExpirationDate" class="form-control" />
                    <span asp-validation-for="ExpirationDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
