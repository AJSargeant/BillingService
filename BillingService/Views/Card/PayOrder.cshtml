@model BillingService.Models.Orders.Order

<div>
    <h4>Order</h4>
    <hr />
    <table class="dl-horizontal">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
        </tr>
        <tr>
            <td>
                @Html.DisplayFor(model => model.OrderId)
            </td>
            <td>
                @Html.DisplayFor(model => model.OrderDate)
            </td>
        </tr>
    </table>

    <h3>Products</h3>
    <hr />
    <table>
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Products[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Products[0].Ean)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Products[0].Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Products[0].Price)
                </th>
                <th>
                    @Html.DisplayName("Total Price")
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model.Products)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ean)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price * item.Quantity)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
