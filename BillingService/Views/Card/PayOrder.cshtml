@model BillingModel.Card

<h4>Card</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="PayOrder">
            @using (Html.BeginForm("PayOrderPost", "Card", FormMethod.Post))
            {
                <fieldset>
                    <dl class="dl-horizontal">
                        @Html.HiddenFor(model => model.Active)
                        @Html.HiddenFor(model => model.ID)
                        @Html.HiddenFor(model => model.UserID)
                    </dl>
                    <div class="col-md-4">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="CardNumber" class="control-label"></label>
                            <input asp-for="CardNumber" class="form-control" />
                            <span asp-validation-for="CardNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ExpirationDate" class="control-label"></label>
                            <input asp-for="ExpirationDate" class="form-control" />
                            <span asp-validation-for="ExpirationDate" class="text-danger"></span>
                        </div>
                        <div>
                            @Html.CheckBox("Save Payment Details?", false)
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>

                </fieldset>
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Cancel Transaction</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
